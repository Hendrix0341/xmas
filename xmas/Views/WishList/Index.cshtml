
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div style="float:left">
        <h2 style="margin-top:0px !important">Hello @Session["Username"]</h2>
        <input type="text" id="" placeholder="Filter" Class="form-control" />
    </div>
    <div style="float:right;">
        <button class="btn btn-success" onclick="ShowAddProduct()" style="margin-top:10px;">Product toevoegen</button> <br />
        <button class="btn btn-primary" style="margin-top:10px;">Product aanpassen</button> <br />
        <button class="btn btn-danger" style="margin-top:10px;">Product verwijderen</button> <br />

    </div>
    <div style="clear:both;"></div>
    <hr />

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Artikel</th>
                <th>URL</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Fender Stratocaster</td>
                <td>http://www.bax-shop.nl/fender/strat</td>
            </tr>
        </tbody>
    </table>


    <div id="dialog" class="modal fade" tabindex="-1" role="dialog" style="color: #333333;">
        <div class="modal-dialog small">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 id="dialog-title" class="modal-title">Product</h4>
                </div>
                <div class="modal-body">
                    <center>@{Html.RenderAction("Product");}</center>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" onclick="Save()">Opslaan</button>
                    <button type="button" class="btn btn-default" onclick="closeDeleteForm()">Cancel</button>
                </div>
            </div>
        </div>
    </div>

</div>

<script type="text/javascript">
    function ShowAddProduct() {
        $("#dialog").modal("show");
    }

    function Save() {

    }

</script>